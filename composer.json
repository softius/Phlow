{
    "name": "softius/phlow",
    "description": "PHP Workflow Engine",
    "keywords": ["workflow", "process", "pipeline"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Iacovos Constantinou",
            "email": "softius@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "friendsofphp/php-cs-fixer": "^2.12"
    },
    "autoload": {
        "psr-4": {
            "Phlow\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phlow\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "@composer install",
            "phpunit"
        ],
        "fix": [
            "php-cs-fixer fix src/",
            "php-cs-fixer fix tests/"
        ]
    }
}
